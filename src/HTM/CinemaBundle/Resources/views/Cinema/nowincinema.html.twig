{% for key,film in film_in_cinema %}
<div class="movie movie--test movie--test--dark movie--test--left">
    <div class="movie__images">
        <a href="{{ path('htm_movie_singlepage', {'id': film.id}) }}" class="movie-beta__link">
            <img alt='' src="../../web/images/cinema/{{ film.imagenow }}">
        </a>
    </div>

    <div class="movie__info">
        <a href='{{ path('htm_movie_singlepage', {'id': film.id}) }}' class="movie__title">{{ film.name }}</a>

        <p class="movie__time">{{ film.duration }} min</p>

        <p class="movie__option">{{ film.category }}</p>
        
        <div class="movie__rate">
            <div class="score"></div>
            <span class="movie__rating">{{ film.stars }}</span>
        </div>               
    </div>
</div>
{% endfor %}
